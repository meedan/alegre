{
  "consumer": {
    "name": "Check API"
  },
  "provider": {
    "name": "Alegre"
  },
  "interactions": [
    {
      "description": "a request to get image flags",
      "providerState": "an image URL",
      "request": {
        "method": "get",
        "path": "/image/classification/",
        "headers": {
          "Content-Type": "application/json"
        },
        "query": {
          "uri": "https://i.imgur.com/ewGClFQ.png"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "result": {
            "flags": {
              "spoof": 1,
              "medical": 2,
              "racy": 1,
              "spam": 0
            }
          }
        }
      }
    },
    {
      "description": "a request to identify its language",
      "providerState": "a text exists",
      "request": {
        "method": "get",
        "path": "/text/langid/",
        "headers": {
          "Content-Type": "application/json"
        },
        "query": {
          "text": "This is a test", 
          "provider": "google"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body":{"result":{"language":"en","confidence":1},"raw":[{"confidence":1,"language":"en","input":"This is a test"}],"provider":"google"}
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}